bool isPowerOfTwo(int n) {
    int i;
    if(n==1)
    {
        return true;
    }
    else if(n<=0)
    {
        return false;
    }
    else if(n>1)
    {
        while(n>2)
        {
            
            if(n%2==1||n==0)
            {
                return false;
            }
            n=n/2;
        }
    }
    return true;
    
}
